#! /bin/bash
URL="{{ opendata_download_url }}"
OUTPUT_FILE=$(mktemp)
STATUS_CODE=$(curl --silent --location --output "$OUTPUT_FILE" --write-out "%{http_code}" --user {{ opendata_download_user }}:'{{ opendata_download_password }}' "$URL")
if [ "$STATUS_CODE" != "200" ]; then
    exit 1
else
    exit 0
fi
