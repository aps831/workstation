[Unit]
Description=Live Syncing (Mirror) Daemon for qemu
After=network.target
OnFailure=status-email-user@%n.service

[Service]
Type=simple
Nice=19
ExecStart=/usr/bin/lsyncd -nodaemon -pidfile /run/lsyncd-qemu.pid /etc/lsyncd/lsyncd-qemu.conf.lua
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/lsyncd-qemu.pid

[Install]
WantedBy=multi-user.target
